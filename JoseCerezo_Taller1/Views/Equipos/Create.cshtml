@model JoseCerezo_Taller1.Models.EquipoModel

@{
    ViewData["Title"] = "Crear equipo";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row mb-3">
                <label asp-for="Nombre" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Nombre" class="form-control" />
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Ciudad" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Ciudad" class="form-control" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Titulos" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Titulos" class="form-control" />
                    <span asp-validation-for="Titulos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row align-items-center mb-3">
                <label class="form-label col-2 col-form-label">
                    @Html.DisplayNameFor(model => model.AceptaExtranjeros)
                </label>
                <div class="col-10">
                    <input class="form-check-input" asp-for="AceptaExtranjeros" /> 
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="IdEstadio" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
                    <select asp-for="IdEstadio" class ="form-control" asp-items="ViewBag.IdEstadio"></select>
                    <span asp-validation-for="IdEstadio" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
				<div class="form-group row col-3">
                    <a asp-action="Index" class="btn btn-secondary col me-2"><i class="bi bi-box-arrow-left"></i> Atrás</a>
                    <button type="submit" class="btn btn-success col"><i class="bi bi-plus-square"></i> Crear</button>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

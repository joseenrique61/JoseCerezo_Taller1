@model JoseCerezo_Taller1.Models.Jugador

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<h4>Jugador @Model.Nombre</h4>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posicion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posicion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipo!.Nombre)
        </dd>
    </dl>
</div>
<div class="row justify-content-center mt-5">
	<div class="form-group row col-3">
		<a asp-action="Index" class="btn btn-secondary col me-2"><i class="bi bi-box-arrow-left"></i> Atrás</a>
		<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning col"><i class="bi bi-pencil-square"></i> Editar</a>
	</div>
</div>

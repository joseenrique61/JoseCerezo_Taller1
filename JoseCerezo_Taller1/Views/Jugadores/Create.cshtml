@model JoseCerezo_Taller1.Models.JugadorModel

@{
    ViewData["Title"] = "Crear jugador";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<h4>Jugador</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row mb-3">
                <label asp-for="Nombre" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Nombre" class="form-control" />
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
                <label asp-for="Posicion" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Posicion" class="form-control" />
					<span asp-validation-for="Posicion" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
                <label asp-for="Edad" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Edad" class="form-control" />
					<span asp-validation-for="Edad" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
				<label asp-for="IdEquipo" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
                    <select asp-for="IdEquipo" class ="form-control" asp-items="ViewBag.IdEquipo"></select>
					<span asp-validation-for="IdEquipo" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
				<div class="form-group row col-3">
                    <a asp-action="Index" class="btn btn-secondary col me-2"><i class="bi bi-box-arrow-left"></i> Atrás</a>
                    <button type="submit" class="btn btn-success col"><i class="bi bi-plus-square"></i> Crear</button>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model JoseCerezo_Taller1.Models.EstadioModel

@{
    ViewData["Title"] = "Editar estadio";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<h4>Estadio @Model.Nombre</h4>
<hr />

<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group row mb-3">
				<label asp-for="Nombre" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Nombre" class="form-control" />
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
				<label asp-for="Direccion" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Direccion" class="form-control" />
					<span asp-validation-for="Direccion" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
				<label asp-for="Ciudad" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Ciudad" class="form-control" />
					<span asp-validation-for="Ciudad" class="text-danger"></span>
				</div>
            </div>
			<div class="form-group row mb-3">
				<label asp-for="Capacidad" class="control-label col-2 col-form-label"></label>
                <div class="col-10">
					<input asp-for="Capacidad" class="form-control" />
					<span asp-validation-for="Capacidad" class="text-danger"></span>
				</div>
            </div>
			<div class="row justify-content-center mt-5">
				<div class="form-group row col-3">
                    <a asp-action="Index" class="btn btn-secondary col me-2"><i class="bi bi-box-arrow-left"></i> Atrás</a>
                    <button type="submit" class="btn btn-warning col"><i class="bi bi-pencil-square"></i> Editar</button>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
